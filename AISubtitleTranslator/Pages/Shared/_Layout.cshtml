<!DOCTYPE html>
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
<script src="~/js/site.js" asp-append-version="true"></script>
<html lang="ru">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>@ViewData["Title"] - AISubtitleTranslator</title>
    <!-- Подключение Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <!-- Подключение Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Подключение кастомных стилей -->
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header class="mb-4">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">AISubtitleTranslator</a>
        </div>
    </nav>
</header>

<main class="container">
    @RenderBody()
</main>

<footer class="mt-4 text-center">
    <div class="container">
        <p>&copy; 2025 - AISubtitleTranslator</p>
    </div>
</footer>

<!-- Подключение jQuery -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<!-- Подключение Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Подключение SignalR -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.7/signalr.min.js"></script>
<!-- Подключение пользовательских скриптов -->
<script src="~/js/site.js"></script>
<script src="~/js/translation.js"></script>
</body>
</html>
